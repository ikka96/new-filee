generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  firstName     String
  lastName      String
  email         String   @unique
  passwordHash  String
  dob           DateTime

  otpCode       String?   @db.VarChar(6)
  otpExpiresAt  DateTime?
  isVerified    Boolean  @default(false)

  createdAt     DateTime @default(now())

  @@map("users")
}
